generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  proprietaire
  locataire
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  condo
  land
}

model User {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  email      String      @unique
  username   String      @unique
  password   String
  avatar     String?
  role       Role
  isBlocked  Boolean     @default(false)
  createdAt  DateTime    @default(now())
  blockedUsers  BlockedUser[]

  // Relations
  posts      Post[]
  savedPosts SavedPost[]
  chats      Chat[]      @relation(fields: [chatIDs], references: [id])
  chatIDs    String[]    @db.ObjectId

  // DÃ©tails spÃ©cifiques par rÃ´le
  adminDetails       Admin? 
  proprietaireDetail ProprietaireDetails?
  locataireDetails   Locataire?

  historique Historique[]   // âœ… nouveau nom ici
}

model Admin {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user        User     @relation(fields: [id], references: [id])
  permissions String[]
  createdAt   DateTime @default(now())
}

model ProprietaireDetails {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  user        User     @relation(fields: [id], references: [id])
  bankAccount String?
  createdAt   DateTime @default(now())
}
model Locataire {
  id        String @id @map("_id") @db.ObjectId
  user      User   @relation(fields: [id], references: [id])
  createdAt DateTime @default(now())
}

model Post {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  price     Int
  images    String[]
  address   String
  city      String
  bedroom   Int
  bathroom  Int
  latitude  String
  longitude String
  type      Type
  property  Property
  createdAt DateTime    @default(now())

  rented    Boolean  @default(false) // â¬… new field

  userId    String?     @db.ObjectId
  user      User?       @relation(fields: [userId], references: [id])

  postDetail PostDetail?
  savedPosts SavedPost[]

  // ðŸ‘‡ opposite side of Chat â†’ Post relation
  chats     Chat[]      // <--- required to make Prisma happy
}


model PostDetail {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  desc      String
  size      Int?
  daysVisit String[]
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId    String   @unique @db.ObjectId
}

model SavedPost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  postId    String   @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model Chat {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  users       User[]    @relation(fields: [userIDs], references: [id])
  userIDs     String[]  @db.ObjectId
  post        Post?     @relation(fields: [postId], references: [id])
  postId      String?   @db.ObjectId
  messages    Message[]
  lastMessage String?
  seenBy      String[]  @db.ObjectId
  confirmed   Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  text      String
  userId    String
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String   @db.ObjectId
  createdAt DateTime @default(now())
}

model BlockedUser {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @unique @db.ObjectId
  user       User     @relation(fields: [userId], references: [id])
  reason     String?
  blockedAt  DateTime @default(now())
  blockedBy  String
}

model Historique {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  action    String
  details   String?
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
}
